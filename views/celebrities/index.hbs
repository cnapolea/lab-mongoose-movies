<h2>List of Celebrities</h2>

{{#each celebrities}}
    <div class="celebrity">
        <a href="/celebrities/{{_id}}">
            <h3>{{name}}</h3>
        </a>
        <form action="/celebrities/{{_id}}/delete" method="post">
            <button>Delete</button>
        </form>
    </div>
{{/each}}

<a href="/celebrities/create">Add Celebrity</a>